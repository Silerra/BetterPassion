<?xml version="1.0" encoding="utf-8"?>
<ModMetaData>
  <name>Better Passion</name>
  <author>Silerra</author>
  <packageId>de.Silerra.BetterPassion</packageId>
  <description>Macht die Leidenschafts-Symbole (Passions) im Work-Tab besser sichtbar durch angepasste Icons und besser unterscheidbare Farben.</description>
  
  <!-- Unterstützte RimWorld-Versionen -->
  <supportedVersions>
    <li>1.5</li>
    <li>1.6</li>
  </supportedVersions>
  
  <!-- Optionale Felder -->
  <url>https://github.com/Silerra/BetterPassionIcons</url>
  
  <!-- Abhängigkeiten -->
  <modDependencies>
      <li>
          <packageId>brrainz.harmony</packageId>  <!-- Korrekte PackageID von Harmony -->
          <displayName>Harmony</displayName>      <!-- Anzeigename für Spieler:innen -->
          <steamWorkshopUrl>steam://url/CommunityFilePage/2009463077</steamWorkshopUrl>  <!-- Steam-Link -->
          <downloadUrl>https://github.com/pardeike/HarmonyRimWorld/releases/latest</downloadUrl>  <!-- Fallback-URL -->
      </li>
  </modDependencies>
  <loadAfter>
    <li>brrainz.harmony</li> <!-- Sicherstellen, dass Harmony geladen ist, bevor dieses Mod geladen wird -->
    <li>de.silerra.highqualitytextures</li> <!-- Sicherstellen, dass die High Quality Textures geladen sind, bevor dieses Mod geladen wird -->
    <li>Telefonmast.GraphicsSettings</li> <!-- Sicherstellen, dass die GraphicsSettings+ geladen sind, bevor dieses Mod geladen wird -->
    <li>bs.performance</li> <!-- Sicherstellen, dass die Performance Fish geladen ist, bevor dieses Mod geladen wird -->
  </loadAfter>
</ModMetaData>